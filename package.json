{
  "name": "@shelf/betterer-config",
  "version": "0.1.0",
  "description": "betterer-config",
  "repository": "https://github.com/shelfio/betterer-config",
  "license": "MIT",
  "author": {
    "name": "Mykyta Khmel",
    "email": "mykyta@shelf.io",
    "url": "https://shelf.io"
  },
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./index.js"
    },
    "./frontend": {
      "require": "./lib/frontend.js",
      "import": "./frontend.js"
    }
  },
  "main": "./lib/index.js",
  "module": "./index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "frontend.js",
    "lib/",
    "index.js"
  ],
  "keywords": [
    "betterer",
    "config",
    "typescript",
    "library"
  ],
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && node esbuild.mjs",
    "build:types": "tsc --emitDeclarationOnly --noEmit false",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json"
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "@betterer/betterer": "5.4.0",
    "@betterer/cli": "5.4.0",
    "@betterer/coverage": "5.4.0",
    "@betterer/eslint": "5.4.0",
    "@betterer/regexp": "5.4.0",
    "@betterer/typescript": "5.4.0"
  },
  "devDependencies": {
    "@betterer/betterer": "5.4.0",
    "@betterer/cli": "5.4.0",
    "@betterer/coverage": "5.4.0",
    "@betterer/eslint": "5.4.0",
    "@betterer/regexp": "5.4.0",
    "@betterer/typescript": "5.4.0",
    "@shelf/esbuild-config": "0.1.2",
    "@shelf/eslint-config": "2.29.0",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.11",
    "@types/node": "16",
    "eslint": "9.39.2",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "eslint --fix"
    ]
  }
}
